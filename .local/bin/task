#!/bin/bash

cmd=$1
task_file="$HOME/.task_list"
case $cmd in
    add)
        echo "$2" >> .task_list
        echo "Added '$2'"
    ;;
    del)
        echo "Deleting $2"
        sed -i "$2d" $task_file
    ;;
    *)
        echo "Task list:"
        i=1
        while IFS= read -r line
        do
            echo "$i. $line"
            ((i=i+1))
        done < "$task_file"
    ;;
esac
