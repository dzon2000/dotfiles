#!/bin/bash

case $BUTTON in
    1) notify-send "Networks" "$(ip -f inet addr show | awk '/:/{l = $2; getline; printf "%s ", l}; NR % 3 {print $2}')" ;;
esac

icon=""
sep=""
if grep -qw up /sys/class/net/enp14s0/operstate
then
    icon="ğŸŒ"
    sep="/"
fi
if grep -qw up /sys/class/net/wlp7s0/operstate
then
    icon="$icon$sepğŸ“¶"
fi

if [ -z "$icon" ]
then
    icon="ğŸš«"
fi

[ -d "/sys/class/net/tun0" ] && echo "$icon+ğŸ”’" || echo "$icon"
